<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/createGalleryDailogTitleTextView"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/create_gallery_dialog_edittext_bg"
        android:gravity="center_horizontal"
        android:hint="Gallery Title"
        android:maxLines="2"
        android:padding="5dp"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/createGalleryDailogDescTextView"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/createGalleryDailogTitleTextView"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/create_gallery_dialog_edittext_bg"
        android:gravity="center_horizontal"
        android:hint="Gallery Desc"
        android:maxLines="2"
        android:padding="5dp"
        android:textColor="@color/colorPrimary" />

    <Spinner
        android:id="@+id/createGalleryDailogSchoolClassSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/createGalleryDailogDescTextView"
        android:layout_alignStart="@+id/createGalleryDailogDescTextView"
        android:layout_below="@+id/createGalleryDailogDescTextView"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp" />


</RelativeLayout>